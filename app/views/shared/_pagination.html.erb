<div class="form-actions no-padding">
  <div style="float: right;">
    <%= will_paginate locals[:target], renderer: BootstrapPagination::Rails, class: 'no-margin', style: "float: right; display: inline;" %>
  </div>
  <div style="float: right; margin-right: 15px;">
      <%= form_tag locals[:model_index_path], id: 'per_page_change', method: 'get' do %>
          <%= select_tag :per_page, options_for_select([1, 2, 5, 10, 20, 50, 100], params[:per_page]), {class: "form-control input-sm", style: "width: 60px; float: right; display: inline;", onchange: "this.form.submit();"} %>
      <% end %>
  </div>
</div>

