<div class="col-lg-1 col-lg-offset-5 col-md-1 col-md-offset-3 col-sm-1 col-sm-offset-5 col-xs-2 col-xs-offset-4 no-padding">
  <%= form_tag locals[:model_index_path], id: 'per_page_change', method: 'get' do %>
    <%= select_tag :per_page, options_for_select([1, 2, 5, 10, 20, 50, 100], params[:per_page]), {class: "form-control input-sm", onchange: "this.form.submit();"} %>
  <% end %>
</div>
<div class="col-lg-3 col-sm-4 hidden-xs no-padding">
  <%= will_paginate locals[:target], renderer: BootstrapPagination::Rails, class: 'no-margin pagination-sm' %>
</div>
