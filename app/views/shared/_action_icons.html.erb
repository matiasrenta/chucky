<%= link_to raw('<i class="fa fa-binoculars"></i>'), locals[:target], rel: 'tooltip', title: t('simple_form.tooltips.show'), data: { toggle: 'toggle', placement: 'top', 'original-title' => t('simple_form.tooltips.show')} if can? :read, locals[:target] %>
<%= link_to raw('<i class="fa fa-pencil"></i>'), locals[:model_edit_path], rel: 'tooltip', title: t('simple_form.tooltips.edit'), data: { toggle: 'toggle', placement: 'top', 'original-title' => t('simple_form.tooltips.edit')} if can? :update, locals[:target] %>
<%= link_to raw('<i class="fa fa-trash"></i>'), locals[:target], method: :delete, rel: 'tooltip', title: t('simple_form.tooltips.destroy'), class:'tooltipwithnofollow', data: { toggle: 'toggle', placement: 'top' , confirm: 'Are you sure?', 'original-title' => t('simple_form.tooltips.destroy')} if can? :destroy, locals[:target] %>

<% if locals[:extra_actions] %>
    <% locals[:extra_actions].each do |extra_action| %>
        <!-- esto no esta programado, extra_action deberÃ¡ ser un hash con todas las cosas que hagan falta para crear cualquier link -->
        <%= link_to raw("<i class='fa #{extra_action[:fa_icon]}'></i>"), extra_action[:url], rel: 'tooltip', data: { toggle: 'toggle', placement: 'top', 'original-title' => extra_action[:tooltip]} if can?(extra_action[:name].to_sym, locals[:target]) %>
    <% end %>
<% end %>

