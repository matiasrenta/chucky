
<div class="control-buttons">
  <div><%= link_to raw('<i class="fa fa-file"></i> New'), new_thing_path, class: 'btn btn-sm btn-primary' %><a aria-expanded="false" aria-controls="filters" data-toggle="collapse" href="#filters" role="button" class="btn btn-sm btn-primary"><i class="fa fa-filter"></i> Filter</a></div>
  <div id="filters" class="collapse"><%= search_form_for(@q, html: {name: 'filter_form', class: 'form-inline'}) do |f| %>
    <form class="form-inline">
      <div class="form-group">
        <label for="q[name_cont]">Name</label><%= f.search_field :name_cont, label: false, class: "form-control input-sm" %>
      </div>
      <div class="form-group">
        <label for="q[age_gteq]">Age</label><%= f.search_field :age_gteq, label: false, class: "form-control input-sm" %>
      </div>
      <div class="form-group">
        <label for="q[gender_eq]">Gender</label><%= f.select :gender_eq, options_for_select(['Male', 'Female', 'Other'], @q.gender_eq), {include_blank: true}, {class: "form-control input-sm"} %>
      </div>
      <div class="form-group spanning">
        <label for="q[price_gteq]">Price</label>
        <div class="block input-group input-group-sm"><%= f.search_field :price_gteq, label: false, placeholder: 'from', class: "form-control input-sm" %></div>
        <div class="block input-group input-group-sm"><%= f.search_field :price_lteq, label: false, placeholder: 'to', class: "form-control input-sm" %></div>
      </div>
      <div class="form-group">
        <label for="q[description_cont]">Description</label><%= f.search_field :description_cont, label: false, class: "form-control input-sm" %>
      </div>
      <div class="form-group spanning">
        <label for="q[expires_gteq]">Expires</label>
        <div class="block input-group input-group-sm"><%= f.search_field :expires_gteq, label: false, placeholder: 'from', class: "form-control datepicker input-sm", data: {dateformat: "dd/mm/yy"} %></div>
        <div class="block input-group input-group-sm"><%= f.search_field :expires_lteq, label: false, placeholder: 'to', class: "form-control datepicker input-sm", data: {dateformat: "dd/mm/yy"} %></div>
      </div>
      <div class="form-group spanning">
        <label for="filter-discharged-from">Discharged</label>
        <div class="input-group input-group-sm block">
          <input data-dateformat="dd/mm/yy" id="filter-discharged-from" placeholder="Enter date" type="text" class="form-control datepicker input-sm">
        </div>
        <div class="input-group input-group-sm block">
          <input data-dateformat="dd/mm/yy" id="filter-discharged-to" placeholder="Enter date" type="text" class="form-control datepicker input-sm">
        </div>
      </div>
      <div class="form-actions no-padding">
        <div>
          <button id="search_clear" name="search_clear" type="submit" value="true" class="btn btn-sm btn-warning form-control"><i class="fa fa-repeat"></i> Reset</button>
          <button type="submit" class="btn btn-sm btn-primary form-control"><i class="fa fa-filter"></i> Filter</button>
        </div>
      </div>
    </form><% end %>
  </div>
</div>
<table id="dt_basic" width="100%" class="display table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th class="all control"><%= sort_link(@q, :name, 'Name') %></th>
      <th><%= sort_link(@q, :age, 'Age') %></th>
      <th><%= sort_link(@q, :gender, 'Gender') %></th>
      <th><%= sort_link(@q, :price, 'Price') %></th>
      <th><%= sort_link(@q, :published, 'Published') %></th>
      <th><%= sort_link(@q, :expires, 'Expires') %></th>
      <th><%= sort_link(@q, :discharged, 'Discharged') %></th>
      <th><%= sort_link(@q, :description, 'Description') %></th>
      <th class="all">Actions</th>
    </tr>

  </thead>
  <tbody>
    <% @things.each do |thing| %>
    <tr>
      <td><%= thing.name %></td>
      <td><%= thing.age %></td>
      <td><%= thing.gender %></td>
      <td><%= thing.price %></td>
      <td><%= boolean_check_mark(thing.published) %></td>
      <td><%= thing.expires %></td>
      <td><%= thing.discharged_at %></td>
      <td><%= thing.description %></td>

      <td class="table-actions">
       <%= link_to raw('<i class="fa fa-binoculars"></i>'), thing, rel: 'tooltip', data: { toggle: 'toggle', placement: 'top', 'original-title': 'Show' } %>
       <%= link_to raw('<i class="fa fa-pencil"></i>'), edit_thing_path(thing), rel: 'tooltip', data: { toggle: 'toggle', placement: 'top', 'original-title': 'Edit' } %>
       <%= link_to raw('<i class="fa fa-trash"></i>'), thing, method: :delete, rel: 'tooltip', data: { toggle: 'toggle', placement: 'top' , confirm: 'Are you sure?', 'original-title': 'Destroy'} %>
      </td>
    </tr>
    <% end %>
    <%= render 'shared/pagination', locals: {target: @things, model_index_path: things_path} %>
  </tbody>
</table>
