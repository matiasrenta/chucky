
<div class="control-buttons">
  <div class="btn-group"><%= link_to raw('<i class="fa fa-file"></i> New'), new_thing_path, class: 'btn btn-sm btn-primary' %><a aria-expanded="false" aria-controls="filters" data-toggle="collapse" href="#filters" role="button" class="btn btn-sm btn-primary"><i class="fa fa-filter"></i> Filter</a></div>
  <div id="filters" class="collapse">
    <div class="well">
      <form class="form-inline">
        <div class="form-group">
          <label for="filter-name">Name</label>
          <input id="filter-name" type="text" placeholder="Jane Doe" class="form-control input-sm">
        </div>
        <div class="form-group">
          <label for="filter-age">Age</label>
          <input id="filter-age" min="0" max="120" type="number" placeholder="21" class="form-control input-sm">
        </div>
        <div class="form-group">
          <label for="filter-gender">Gender</label>
          <select id="filter-gender" class="form-control input-sm">
            <option></option>
            <option>Female</option>
            <option>Male</option>
            <option>Other</option>
          </select>
        </div>
        <div class="form-group">
          <label for="filter-price-from">Price (from)</label>
          <div class="input-group input-group-sm">
            <input id="filter-price-from" min="0.01" placeholder="0.01" step="0.01" type="number" class="form-control input-sm"><span class="input-group-addon"><i class="fa fa-money"></i></span>
          </div>
        </div>
        <div class="form-group">
          <label for="filter-price-to">Price (to)</label>
          <div class="input-group input-group-sm">
            <input id="filter-price-to" min="0.01" placeholder="0.01" step="0.01" type="number" class="form-control input-sm"><span class="input-group-addon"><i class="fa fa-money"></i></span>
          </div>
        </div>
        <div class="form-group">
          <label for="filter-expires-from">Expires (from)</label>
          <div class="input-group input-group-sm">
            <input data-dateformat="dd/mm/yy" id="filter-expires-from" placeholder="Select a date" type="text" class="form-control datepicker input-sm"><span class="input-group-addon"><i class="fa fa-calendar"></i></span>
          </div>
        </div>
        <div class="form-group">
          <label for="filter-expires-to">Expires (to)</label>
          <div class="input-group input-group-sm">
            <input data-dateformat="dd/mm/yy" id="filter-expires-to" placeholder="Select a date" type="text" class="form-control datepicker input-sm"><span class="input-group-addon"><i class="fa fa-calendar"></i></span>
          </div>
        </div>
        <div class="form-group">
          <label for="filter-discharged-from">Discharged (from)</label>
          <div class="input-group input-group-sm">
            <input data-dateformat="dd/mm/yy" id="filter-discharged-from" placeholder="Select a date" type="text" class="form-control datepicker input-sm"><span class="input-group-addon"><i class="fa fa-calendar"></i></span>
          </div>
        </div>
        <div class="form-group">
          <label for="filter-discharged-to">Discharged (to)</label>
          <div class="input-group input-group-sm">
            <input data-dateformat="dd/mm/yy" id="filter-discharged-to" placeholder="Select a date" type="text" class="form-control datepicker input-sm"><span class="input-group-addon"><i class="fa fa-calendar"></i></span>
          </div>
        </div>
        <div class="form-group">
          <label for="filter-description">Description</label>
          <input id="filter-description" type="text" placeholder="jane.doe@example.com" class="form-control input-sm">
        </div>
        <div class="form-actions no-padding">
          <div class="btn-group">
            <button type="reset" class="btn btn-sm btn-default form-control">Reset</button>
            <button type="submit" class="btn btn-sm btn-primary form-control">Filter</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<table id="dt_basic" width="100%" class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th data-class="expand">Name</th>
      <th data-class="expand">Age</th>
      <th>Gender</th>
      <th>Price</th>
      <th>Expires</th>
      <th>Discharged</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody><% @things.each do |thing| %>
    <tr>
      <td><%= thing.name %></td>
      <td><%= thing.age %></td>
      <td><%#= thing.gender %></td>
      <td><%= thing.price %></td>
      <td><%= thing.expires %></td>
      <td><%= thing.discharged_at %></td>
      <td><%= thing.description %></td>

      <td colspan=3>
       <%= link_to raw('<i class="fa fa-binoculars"></i>'), thing, rel: 'tooltip', data: { toggle: 'toggle', placement: 'top', 'original-title': 'Show' } %>
       <%= link_to raw('<i class="fa fa-pencil"></i>'), edit_thing_path(thing), rel: 'tooltip', data: { toggle: 'toggle', placement: 'top', 'original-title': 'Edit' } %>
       <%= link_to raw('<i class="fa fa-trash"></i>'), thing, method: :delete, rel: 'tooltip', data: { toggle: 'toggle', placement: 'top' , confirm: 'Are you sure?', 'original-title': 'Destroy'} %>
      </td>
    </tr><% end %>
  </tbody>
</table>
<select class="form-control input-sm">
  <option>10</option>
  <option>20</option>
  <option>50</option>
  <option>100</option>
</select><%= will_paginate @things, renderer: BootstrapPagination::Rails, class: 'no-margin' %>
