<section id="widget-grid">
  <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
    <div id="wid-id-0" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" class="jarviswidget jarviswidget-color-darken">
      <header><span class="widget-icon"><i class="fa fa-binoculars"></i></span>

        <div class="widget-toolbar">
          <%= link_to raw("<i class='fa fa-arrow-left'></i> #{t('simple_form.buttons.list')}"), things_path, class: 'btn btn-primary' %>
          <%= link_to raw("<i class='fa fa-pencil'></i> #{t('simple_form.buttons.edit')}"), edit_thing_path(@thing), class: 'btn btn-primary' if can?(:update, Thing) %>
        </div>
      </header>
      <div class="no-padding">
        <div class="widget-body">
          <div class="form-horizontal">
            <div class="form-group">
              <label class="col-sm-2 control-label"><%= t('simple_form.labels.defaults.name') %></label>

              <div class="col-sm-10">
                <p class="form-control-static"><%= @thing.name %></p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label"><%= t('simple_form.labels.defaults.age') %></label>

              <div class="col-sm-10">
                <p class="form-control-static"><%= @thing.age %></p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label"><%= t('simple_form.labels.defaults.price') %></label>

              <div class="col-sm-10">
                <p class="form-control-static"><%= @thing.price %></p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label"><%= t('simple_form.labels.defaults.expires') %></label>

              <div class="col-sm-10">
                <p class="form-control-static"><%= l(@thing.expires, :format => :long) if @thing.expires %></p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label"><%= t('simple_form.labels.defaults.discharged_at') %></label>

              <div class="col-sm-10">
                <p class="form-control-static"><%= l(@thing.discharged_at, :format => :long) if @thing.discharged_at %></p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label"><%= t('simple_form.labels.defaults.description') %></label>

              <div class="col-sm-10">
                <p class="form-control-static"><%= @thing.description %></p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label"><%= t('simple_form.labels.defaults.published') %></label>

              <div class="col-sm-10">
                <p class="form-control-static"><%= boolean_check_mark(@thing.published) %></p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label"><%= t('simple_form.labels.defaults.gender') %></label>
              <div class="col-sm-10">
                <p class="form-control-static"><%= @thing.gender %></p>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label">Imagenes</label>
              <div class="col-sm-10">
                <% @thing.thing_attaches.each do |attach| %>
                    <p class="form-control-static"><%= image_tag attachment_url(attach, :file, :fill, 100, 100) %></p>
                <% end %>

              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </article>

