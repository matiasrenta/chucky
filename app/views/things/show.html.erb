
<section id="widget-grid">
  <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
    <div id="wid-id-0" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" class="jarviswidget jarviswidget-color-darken">
      <header><span class="widget-icon"><i class="fa fa-user"></i></span>
        <h2>User</h2>
        <div class="widget-toolbar">
          <%= link_to raw('<i class="fa fa-arrow-left"></i> Back'), things_path, class: 'btn btn-primary' %>
          <%= link_to raw('<i class="fa fa-pencil"></i> Edit'), edit_thing_path(@thing), class: 'btn btn-primary' %>
        </div>
      </header>
      <div class="no-padding">
        <div class="widget-body">
          <div class="form-horizontal">
            <div class="form-group">
              <label class="col-sm-2 control-label">Name</label>
              <div class="col-sm-10">
                <p class="form-control-static"><%= @thing.name %></p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Age</label>
              <div class="col-sm-10">
                <p class="form-control-static"><%= @thing.age %></p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Price</label>
              <div class="col-sm-10">
                <p class="form-control-static"><%= @thing.price %></p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Expires</label>
              <div class="col-sm-10">
                <p class="form-control-static"><%= @thing.expires %></p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Discharged at</label>
              <div class="col-sm-10">
                <p class="form-control-static"><%= @thing.discharged_at %></p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Description</label>
              <div class="col-sm-10">
                <p class="form-control-static"><%= @thing.description %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </article>
  <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
    <div id="wid-id-1" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" class="jarviswidget jarviswidget-color-darken">
      <header><span class="widget-icon"><i class="fa fa-info"></i></span>
        <h2>Details</h2>
        <!-- toolbar-->
      </header>
      <div class="no-padding">
        <div class="widget-body">
          <!-- content-->
        </div>
      </div>
    </div>
  </article>
</section>
