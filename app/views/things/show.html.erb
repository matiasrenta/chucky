
<section id="widget-grid">
  <div class="row">
    <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
      <div id="wid-id-0" class="jarviswidget">
        <header>
          <h2>Thing</h2>
        </header>
        <div>
          <div class="widget-body">
            <div class="control-buttons">
              <div class="btn-group">
                <%= link_to raw('<i class="fa fa-arrow-left"></i> Back'), things_path, class: 'btn btn-sm btn-primary' %>
                <%= link_to raw('<i class="fa fa-pencil"></i> Edit'), edit_thing_path(@thing), class: 'btn btn-sm btn-primary' %>
              </div>
            </div>
            <div class="form-inputs">
              <div class="form-group">
                <label class="col-sm-3 control-label">Name</label>
                <div class="col-sm-9">
                  <p class="form-control-static">
                    <%= @thing.name %>
                  </p>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-3 control-label">Age</label>
                <div class="col-sm-9">
                  <p class="form-control-static">
                    <%= @thing.age %>
                  </p>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-3 control-label">Price</label>
                <div class="col-sm-9">
                  <p class="form-control-static">
                    <%= @thing.price %>
                  </p>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-3 control-label">Expires</label>
                <div class="col-sm-9">
                  <p class="form-control-static">
                    <%= @thing.expires %>
                  </p>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-3 control-label">Discharged at</label>
                <div class="col-sm-9">
                  <p class="form-control-static">
                    <%= @thing.discharged_at %>
                  </p>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-3 control-label">Description</label>
                <div class="col-sm-9">
                  <p class="form-control-static">
                    <%= @thing.description %>
                  </p>
                </div>
              </div>
            </div>
            <div class="form-actions no-border no-margin no-padding">
              <div class="btn-group">
                <%= link_to raw('<i class="fa fa-cross"></i> Cancel'), things_path, class: 'btn btn-primary btn-sm' %>
                <%= link_to raw('<i class="fa fa-check"></i> OK'), edit_thing_path(@thing), class: 'btn btn-primary btn-sm', rel: 'tooltip', data: { toggle: 'toggle', placement: 'top', 'original-title': 'Show' } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </article>
  </div>
  <div class="row">
    <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
      <div id="wid-id-1" class="jarviswidget">
        <header>
          <h2>Details</h2>
        </header>
        <div>
          <div class="widget-body">
            <!-- content-->
          </div>
        </div>
      </div>
    </article>
  </div>
</section>
