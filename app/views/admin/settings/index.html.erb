<section id="widget-grid">
  <div class="row">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div id="wid-id-0" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" class="jarviswidget jarviswidget-color-darken">
        <header><span class="widget-icon"><i class="fa fa-table"></i></span>
          <div class="widget-toolbar">
            <%= link_to raw("<i class='fa fa-file'></i> #{t('simple_form.buttons.new')}"), new_admin_setting_path, class: 'btn btn-primary' %>
          </div>
        </header>
        <div class="no-padding">
          <div class="jarviswidget-editbox">
            <div class="col-md-9 col-sm-12 no-padding">
            </div>
          </div>
          <div class="widget-body">
            <table id="dt_basic" width="100%" class="display table table-striped table-bordered table-hover">
              <thead>
              <tr>
                <th class='all control'>Var</th>
                <th>Value</th>
                <th>Class</th>
                <th>Created At</th>
                <th>Updated At</th>
                <th class="all"><%= t('simple_form.screen.actions') %></th>
              </tr>
              </thead>
              <tbody>
              <% @settings.each do |sett| %>
                  <tr>
                    <td><%= sett.var %></td>
                    <td><%= Settings[sett.var].to_s %></td>
                    <td><%= Settings[sett.var].class.try(:name) %></td>
                    <td><%= sett.created_at %></td>
                    <td><%= sett.updated_at %></td>
                    <td class="table-actions">
                      <%= link_to raw('<i class="fa fa-pencil"></i>'), edit_admin_setting_path(sett), rel: 'tooltip', data: { toggle: 'toggle', placement: 'top', 'original-title' => t('simple_form.tooltips.edit')} %>
                      <%= link_to raw('<i class="fa fa-trash"></i>'), "/admin/settings/#{sett.var}", method: :delete, rel: 'tooltip', data: { toggle: 'toggle', placement: 'top' , confirm: 'Are you sure?', 'original-title' => t('simple_form.tooltips.destroy')} %>
                    </td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </article>
  </div>
</section>

